<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/img_v"
        android:layout_width="157dp"
        android:layout_height="151dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp"
        android:src="@drawable/s" />

    <EditText
        android:textColorHint="#8F8C8C"
        android:drawableLeft="@drawable/ic_action_user"
        android:id="@+id/editTextText"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/img_v"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="UserName"
        android:inputType="text"
        android:textSize="16sp" />

    <EditText
        android:textColorHint="#8F8C8C"
        android:drawableLeft="@drawable/ic_action_pass"
        android:id="@+id/editTextTextPassword"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_below="@+id/editTextText"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:background="#11000000"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:textSize="16sp" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_view"
        app:cardMaxElevation="100dp"
        app:cardCornerRadius="50dp"
        app:cardBackgroundColor="#F14B84"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/editTextTextPassword"
        android:layout_width="300dp"
        android:layout_height="50dp">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            
            <TextView
                android:textSize="18sp"
                android:layout_centerInParent="true"
                android:textColor="#fff"
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            
        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_rh"
        android:textColor="#AAA3A3"
        android:layout_marginTop="45dp"
        android:layout_below="@+id/card_view"
        android:layout_centerHorizontal="true"
        android:text="Register Here."
        android:textSize="16sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:layout_marginTop="20dp"
        android:textColor="@color/white"
        android:text="Đoàn Huỳnh Ngọc Sơn - 21115053120140"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txt_rh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>